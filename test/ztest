#!/usr/bin/env php
<?php
include 'lib/utils.php';

if(count($argv) <= 1) die(printUsage());

switch($argv[1])
{
    case 'init':
        zdRun();
        break;
    case 'extract':
        ztfExtract('api');
        ztfExtract('model');
        break;
    case 'api':
        ztfRun('api');
        break;
    case 'control':
        ztfRun('control');
        break;
    case 'program':
        ztfRun('model/program');
        break;
    case 'programplan':
        ztfRun('model/programplan');
        break;
    case 'product':
        ztfRun('model/product');
        break;
    case 'project':
        ztfRun('model/project');
        break;
    case 'task':
        ztfRun('model/task');
        break;
    case 'story':
        ztfRun('model/story');
        break;
    case 'execution':
        ztfRun('model/execution');
        break;
    case 'user':
        ztfRun('model/user');
        break;
    case 'bug':
        ztfRun('model/bug');
        break;
    case 'company':
        ztfRun('model/company');
        break;
    case 'todo':
        ztfRun('model/todo');
        break;
    case 'dept':
        ztfRun('model/dept');
        break;
    case 'build':
        ztfRun('model/build');
        break;
    case 'kanban':
        ztfRun('model/kanban');
        break;
    case 'action':
        ztfRun('model/action');
        break;
    case 'testcase':
        ztfRun('model/testcase');
        break;
    case 'my':
        ztfRun('model/my');
        break;
    case 'caselib':
        ztfRun('model/caselib');
        break;
    case 'cron':
        ztfRun('model/cron');
        break;
    case 'stage':
        ztfRun('model/stage');
        break;
    case 'tree':
        ztfRun('model/tree');
        break;
    case 'design':
        ztfRun('model/design');
        break;
    case 'model':
        ztfRun('model');
        break;

    default:
        ztfExtract($argv[1]);
        system("php " . $argv[1]);
}
